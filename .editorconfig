root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.java]
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

[*.{kt,kts}]
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[{.gitconfig,.gitmodules}]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
