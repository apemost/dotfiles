root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[{.gitconfig,.gitmodules}]
indent_style = tab

[Makefile]
indent_style = tab

[.bumpversion.cfg]
indent_style = tab
trim_trailing_whitespace = false
