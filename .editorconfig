root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt,kts}]
max_line_length = 100

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[.{gitconfig,gitmodules}]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
